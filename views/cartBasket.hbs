<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta
      name='viewport'
      content='width=device-width, initial-scale=1.0'
    />
    <link rel="stylesheet" href='../public/styles.css'>
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx'
      crossorigin='anonymous'
    />
    <script
      src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js'
      integrity='sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa'
      crossorigin='anonymous'
    ></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/public/index.js"></script>
    <title>Document</title>
  </head>
  <body>
    {{> navbar}}
    <div class="card">
            <div class="row">
                <div class="col-md-8 cart">
                    <div class="title">
                        <div class="row">
                            <div class="col"><h4><b>CARRITO</b></h4></div>
                            <div class="col align-self-center text-right text-muted">{{addToCart.id}}</div>
                        </div>
                    </div>    
                    <div class="row border-top border-bottom">
                        <div class="row main align-items-center">
                            <div class="col-2"><img class="img-fluid" src="{{addToCart.picture}}"></div>
                            <div class="col">
                                <div class="row text-muted">{{addToCart.name}}</div>
                            </div>
                            <div class="col">{{addToCart.price}}</div>
                        </div>
                    </div>
                    
                    <div class="back-to-shop"><a href="/api/productos">Volver Al listado de Productos</a><span class="text-muted"></span></div>
                </div>
                <div class="col-md-4 summary">
                    <div><h5><b>TOTAL</b></h5></div>
                    <hr>
                    <div class="row">
                        <div class="col" style="padding-left:0;">{{addToCart.id}}</div>
                        <div class="col text-right">{{addToCart.price}}</div>
                    </div>
                    <form>
                        <p>SHIPPING</p>
                        <select><option class="text-muted">Envio gratis a domicilio</option></select>
                    </form>
                    <div class="row" style="border-top: 1px solid rgba(0,0,0,.1); padding: 2vh 0;">
                        <div class="col">PRECIO TOTAL</div>
                        <div class="col text-right">{{addToCart.price}}</div>
                    </div>
                    <button class="btn">CHECKOUT</button>
                </div>
            </div>           
        </div>
    {{> footer}}
  </body>
</html>