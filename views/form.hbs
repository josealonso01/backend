<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta
      name='viewport'
      content='width=device-width, initial-scale=1.0'
    />
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx'
      crossorigin='anonymous'
    />
    <script
      src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js'
      integrity='sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa'
      crossorigin='anonymous'
    ></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/public/index.js"></script>
    <title>Document</title>
  </head>
  <body>
    {{> navbar}}
    <section class='p-4 bg-secondary'>
      <h2 class='text-primary'>Ingrese Producto</h2>
      <form action='/api/productos' method='post'>
        <div class='mb-3'>
          <label class='form-label fw-bold' for='name'>Nombre</label>
          <input class='form-control' type='text' name='name' />
        </div>
        <div class='mb-3'>
          <label class='form-label fw-bold' for='price'>Precio</label>
          <input class='form-control' type='number' name='price' />
        </div>
        <div class='mb-3'>
          <label class='form-label fw-bold' for='picture'>Foto URL</label>
          <input class='form-control' type='url' name='picture' />
        </div>
        <div class='mb-3'>
          <input
            class='btn btn-success'
            type='submit'
            value='ENVIAR'
          />
        </div>
      </form>
      <div>
        <h1>LISTA DE PRODUCTOS</h1>
      <div id='lista'> </div>
        <a href='/api/productos'>
          <button class='btn btn-warning'>IR AL LISTADO DE PRODUCTOS</button>
        </a>
      </div>
      <h1>CENTRO DE MENSAJES</h1>
      <input id='caja-nombre' type='text' value='josefina' />
      <input id='caja-msg' type='text' value='' />
      <button onclick='enviar()'>enviar msg</button>
      
      <div id='html'> </div>

    </section>
    {{> footer}}
  </body>
</html>