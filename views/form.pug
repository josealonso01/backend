html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx' crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js' integrity='sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa' crossorigin='anonymous')
    title Document
  body
    section.p-4.bg-secondary
      h2.text-dark Ingrese Producto
      form(action='/api/productos' method='post')
        .mb-3
          label.form-label.fw-bold(for='name') Nombre
          input.form-control(type='text' name='name')
        .mb-3
          label.form-label.fw-bold(for='price') Precio
          input.form-control(type='number' name='price')
        .mb-3
          label.form-label.fw-bold(for='picture') Foto URL
          input.form-control(type='url' name='picture')
        .mb-3
          input.btn.btn-dark(type='submit' value='ENVIAR')
      div
        a(href='/api/productos')
          button.btn.btn-light IR AL LISTADO DE PRODUCTOS
